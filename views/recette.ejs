<% include header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/recette.css">

<% for (recette of recettes) { %>

    <!--
<% for (ingredient of ingredients) { %>
    <p><%= ingredient.id_recette %></p>
    <p><%= ingredient.id_ingredient %></p>
    <p><%= ingredient.nom %></p>
